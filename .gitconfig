[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[user]
	name = Viktor Vodnev
	email = v.vodnev73@gmail.com
[init]
	defaultBranch = main
[core]
	editor = vim
[color "branch"]
	current = green bold
	local = yellow bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[alias]
	plog = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
	pristine = !git reset --hard && git clean -dff
